{% if paginate.pages > 1 %}
  {% comment %} {{ paginate | default_pagination }} {% endcomment %}

  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      {% if paginate.previous.is_link %}
        <div class="li page-item">
          <a href="{{ paginate.previous.url }}" class="page-link">{{ paginate.previous.title }}</a>
        </div>
      {% endif %}
      {% for part in paginate.parts %}
        {% if part.is_link %}
          <div class="li page-item">
            <a href="{{ part.url }}" class="page-link">{{ part.title }}</a>
          </div>
        {% else %}
          <div class="li page-item disabled">
            <a href="{{ part.url }}" class="page-link">{{ part.title }}</a>
          </div>
        {% endif %}
      {% endfor %}
      {% if paginate.next.is_link %}
        <div class="li page-item">
          <a href="{{ paginate.next.url }}" class="page-link">{{ paginate.next.title }}</a>
        </div>
      {% endif %}
    </ul>
  </nav>
{% endif %}
