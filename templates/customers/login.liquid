<div class="container my-5">
  <div class="login-form">
    {% form 'customer_login' %}
      <h1 class="h3">Customer Login</h1>
      <label for="emailAddress">Email address</label>
      <input type="email" name="customer[email]" class="form-control rounded-0 my-2">
      <label for="password">Password</label>
      <input type="password" name="customer[password]" class="form-control rounded-0 my-2">

      <input type="submit" value="Sign in" class="btn btn-primary btn-lg w-100 my-4 rounded-0">

      {% render 'form-error', form: form %}
    {% endform %}

    <a href="#recover" id="forgotPassword" class="text-center">Forgot your password?</a>
  </div>

  <div class="d-none forgot-password-form">
    {% form 'recover_customer_password' %}
      <div class="col-12">
        <label for="resetEmailAddress">Email</label>
        <input type="email" id="resetEmailAddress" name="email" class="form-control rounded-0 my-2">
      </div>
      <input type="submit" value="Reset password" class="btn btn-primary btn-lg w-100 my-4 rounded-0">

      {% render 'form-error', form: form %}
    {% endform %}
  </div>
</div>
