<div class="container my-5">
  <div class="login-form">
    {% form 'create_customer' %}
      <h1 class="h3">Customer Register</h1>
      <label for="firstName">First Name</label>
      <input type="text" name="customer[first_name]" class="form-control rounded-0 my-2">
      <label for="lastName">Last Name</label>
      <input type="text" name="customer[last_name]" class="form-control rounded-0 my-2">
      <label for="emailAddress">Email address</label>
      <input type="email" name="customer[email]" class="form-control rounded-0 my-2">
      <label for="password">Password</label>
      <input type="password" name="customer[password]" class="form-control rounded-0 my-2">

      <input type="submit" value="Create an account" class="btn btn-primary btn-lg w-100 my-4 rounded-0">

      {% render 'form-error', form: form %}
    {% endform %}
  </div>
</div>
